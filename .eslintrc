{
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "cy": true,
    "Cypress": true,
    "before": true,
    "after": true,
    "given": true,
    "when": true,
    "then": true,
    "background": true
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "func-names": "off",
    "prefer-arrow-callback": "off",
    "arrow-parens": 0,
    "function-paren-newline": 0,
    "class-methods-use-this": 0,
    "max-len": [
      "error",
      140,
      2
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}
